{
    "http-basic": {
      {% for repo in @('composer.auth.basic') %}
        "{{ repo.path }}": {
            "username": "{{ repo.username }}",
            "password": "{{ repo.password }}"
        }{% if not loop.last %},{% endif %}
      {% endfor %}
    },
    "github-oauth": {
      {% if @('composer.auth.github') %}
        "github.com": "{{ @('composer.auth.github') }}"
      {% endif %}
    }
}
